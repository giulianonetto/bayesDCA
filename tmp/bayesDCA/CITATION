  author       = personList(as.person("Giuliano Netto Flores Cruz")),
  year         = "2022",
  url          = "https://giulianonetto.github.io/bayesdca/",
  note         = "R package version 0.0.0.9000",
  textVersion  =
  paste("Cruz, GNF (2022).",
        "Bayesian Decision Curve Analysis with bayesDCA.",
        "R package version 0.0.0.9000.",
        "URL https://giulianonetto.github.io/bayesdca.")
)
